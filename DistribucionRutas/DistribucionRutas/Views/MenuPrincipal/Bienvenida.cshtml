@{
    ViewBag.Title = "Bienvenida";
    Layout = ViewBag.Layout;
}


<div class="row">
    <div class="col-12">
        <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
            <div class="col-md-8 p-lg-5 mx-auto my-5">
                <h1 class="display-4 fw-normal">Bienvenido @ViewBag.Nombres @ViewBag.Apellidos</h1>
                <p class="lead fw-normal">Desde aquí puedes hacer un pedido</p>
                <hr />
                <a class="btn btn-outline-secondary" href="@Url.Action("IngresoQuejaCliente", "IngresoQuejaCliente")">Hacer Pedido</a>
            </div>
            <div class="product-device shadow-sm d-none d-md-block"></div>
            <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
        </div>
    </div>
</div>


